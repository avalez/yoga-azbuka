{
	"template_dir": "templates", 
	"content_dir": "contents",
	"output_dir": "output",

	"server": { 
		"port": 9009
	},

	"bundles": {
		"/css/all.css": [
			"/css/custom.css"
		]	
	},

    "plugins": {
        "xcontent_handler": "./lib/rest_content_handler",
		"helpers": {
			"blog_helper": "./helpers/blog_helper.js"
		},
        "publishers": {
            "git_strategy": "./lib/punch-git-publisher.js" 
        },
        "generator_hooks": {
            "fix_utf8": "punch-fix-utf8"
        }
    },

    "publish": {
        "strategy": "git_strategy",
        "options": {
            "repo_url": "git@github.com:avalez/yoga-azbuka",
            "branch": "gh-pages"
        }
	}
}
